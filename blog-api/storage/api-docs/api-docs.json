                    },
                    "status": {
                        "type": "string",
                        "example": "active"
                    },
                    "body": {
                        "type": "string",
                        "example": "Пример поста"
                    },
                    "user": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 5
                            },
                            "name": {
                                "type": "string",
                                "example": "Angelina"
                            }
                        },
                        "type": "object"
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2025-10-16T12:34:56Z"
                    }
                },
                "type": "object"
            },
            "PostResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "status": {
                        "type": "string",
